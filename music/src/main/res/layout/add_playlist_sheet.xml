<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include android:id="@+id/sheet_header" layout="@layout/sheet_header" />

    <com.beatstreaming.music.sheet.playlist.PlaylistList
        android:id="@+id/add_playlist_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.beatstreaming.music.sheet.playlist.CreatePlaylistButton
        android:id="@+id/create_playlist_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sheet_add_to_playlist_create"
        android:layout_margin="@dimen/space_medium" />
</LinearLayout>