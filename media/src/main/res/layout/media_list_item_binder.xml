<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/space_min"
    android:paddingHorizontal="@dimen/space_normal"
    android:foreground="@drawable/ripple_with_border"
    android:gravity="center_vertical"
    android:showDividers="middle"
    android:divider="@drawable/divider">

    <FrameLayout
        android:id="@+id/media_cover"
        android:layout_width="@dimen/image_height_normal"
        android:layout_height="@dimen/image_height_normal"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/media_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/media_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>