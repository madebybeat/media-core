<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_small">

    <include android:id="@+id/header" layout="@layout/sheet_header" />

    <com.beatstreaming.core.component.ui.IconContentView
        android:id="@+id/app_website"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_big"
        android:background="@drawable/ripple_with_border">

        <ImageView
            android:layout_width="@dimen/space_normal"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/link" />

        <TextView
            android:id="@+id/app_website_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.beatstreaming.core.component.ui.IconContentView>

    <com.beatstreaming.core.component.ui.IconContentView
        android:id="@+id/app_author_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_normal"
        android:background="@drawable/ripple_with_border">

        <ImageView
            android:layout_width="@dimen/space_normal"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/app_author_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.beatstreaming.core.component.ui.IconContentView>

    <com.beatstreaming.core.component.ui.IconContentView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_normal">

        <ImageView
            android:layout_width="@dimen/space_normal"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:src="@drawable/info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sheet_app_disclaimer" />
    </com.beatstreaming.core.component.ui.IconContentView>
</LinearLayout>