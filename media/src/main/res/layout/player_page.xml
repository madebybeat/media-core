<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/space_normal"
    android:orientation="vertical">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/player_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/space_normal"
        app:justifyContent="space_between"
        app:alignItems="center">

        <include layout="@layout/player_close_button" />

        <LinearLayout
            android:id="@+id/player_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <include android:id="@+id/player_menu_button" layout="@layout/player_menu_button" />
    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:id="@+id/player_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>