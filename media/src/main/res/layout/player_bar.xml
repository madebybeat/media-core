<?xml version="1.0" encoding="utf-8"?>
<com.beatstreaming.media.player.ui.PlayerBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/m3_sys_dark_surface_variant"
    android:padding="@dimen/space_small"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/player_media_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/play_previous_button" />
        <include layout="@layout/play_status" />
        <include layout="@layout/play_next_button" />
    </LinearLayout>
</com.beatstreaming.media.player.ui.PlayerBar>